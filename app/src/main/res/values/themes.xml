<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RouteECommerce" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.RouteECommerce" parent="Base.Theme.RouteECommerce" />

    <style name="CornerSize5Percent">
        <item name="cornerSize">5%</item>
    </style>

    <style name="CornerSize20Percent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="CircularCorner">
        <item name="cornerSize">50%</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GeneralText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>
</resources>